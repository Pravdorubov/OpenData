<body>
    
        
    
	
    <div class="wrapper">
    
        @RenderPage("~/Views/Shared/Header.tablet.cshtml")

     

 <div id="Nav"  >
<nav id="horizontal">
     <ul id="tabs">
            <li ><a class="selected" href="/">Наборы данных</a></li>
            <li ><a href="/Maps">Карты</a></li>
            <li ><a href="/Developers">Разработчикам</a></li>
            <li ><a href="/About">О Портале</a></li>
        </ul>
</nav>
</div> 
<div class="row">
    <aside id="filtersAside" class="left medium-3 columns">
      
        <div id="categories">
            <span style="font-weight:bold; font-size:larger">Категории</span> 
            <span id="CatSpan">скрыть</span>    
            <div id="CatDiv">
                @{ Html.RenderAction("MenuCat", "Nav"); }  
             </div>   
        </div>
        
       
           

        
        <div id="oigv">
            <span style="font-weight:bold; font-size:larger">ОИГВ</span>
            <span id="AuthSpan">скрыть</span>    
            <div id="AuthDiv">
                @{ Html.RenderAction("MenuAuth", "Nav"); }  
            </div>
            
        </div>
    </aside>
    
         
        <div id="datasetsDiv" class="medium-9 columns">
            @RenderBody()
            <div class="noResult" style="display: none">
                Наборов данных в категории нет
            </div>
        </div>
    </div>

<div class="overlay"></div>
         @RenderPage("~/Views/Shared/Footer.cshtml")
</div>
    

    
