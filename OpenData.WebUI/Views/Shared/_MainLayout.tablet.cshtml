    <script type="text/javascript">
        $('#CatSpan').click(function () {
            if ($('#CatSpan').text() == 'скрыть') {
                $('#CatDiv').hide('Highlight');
                $('#CatSpan').text('показать');
            }
            else {
                $('#CatDiv').show('Highlight');
                $('#CatSpan').text('скрыть');
            }
        });

        $('#AuthSpan').click(function () {
            if ($('#AuthSpan').text() == 'скрыть') {
                $('#AuthDiv').hide('Highlight');
                $('#AuthSpan').text('показать');
            }
            else {
                $('#AuthDiv').show('Highlight');
                $('#AuthSpan').text('скрыть');
            }
        });


    </script>
